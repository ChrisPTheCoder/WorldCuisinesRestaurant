
@{
    ViewBag.Title = "UserLogin";
}

<h3>Please fill fields below </h3>

<div class="danger" style="color:red; font-size: 20px">
    @ViewBag.UserNotFound

</div>

<div class="danger" style="color:red; font-size: 20px">
    @ViewBag.IncorrectPassword

</div>


@using (Html.BeginForm("CheckUserLogin", "UserLogins", FormMethod.Post))
{

    <h4> Login </h4>
    <input type="text" name="login" />

    <h4> Password </h4>
    <input type="password" name="pass" />

    <input type="submit" name="Send" />


}

<div>
    @Html.ActionLink("Register", "Create", "UserLogins")
</div>

